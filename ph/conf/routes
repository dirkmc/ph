# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /test                                   Application.test

GET     /file/compile.json                      FileManager.compile
GET     /file/load                              FileManager.load
GET     /file/load.html                         FileManager.loadHtml
POST    /file/save.json                         FileManager.save
POST    /file/save/content.json                 FileManager.saveContent
POST    /file/deltas.json                       FileManager.deltas
GET     /file/auto-complete.json                FileManager.autoComplete

GET     /project/recent.json                    Project.recent


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
